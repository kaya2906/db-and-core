<h2>TSU Core Curriculum</h2>

<div class="container">
<form method="POST" action="/added">
  <!--Component menu-->
 
<select class="ui selection dropdown" name="component_id" required>
    <option value="" disabled selected>Component</option>

      <%for (var i = 0; i < componentId.length; i++){ %>
    <option value="<%= componentId[i].component_id%>" >
      <%= componentName[i].component_name%>
      <% } %>
    </option>
</select>

