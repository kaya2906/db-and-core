      <option value="<%= courseId[i].course_id%>" |>
        <%= courseId[i].course_id%>
        <% } %>
      </option>
  </select>

 <!--Condition Menu--> 
  <select class="ui selection dropdown" name="course_condition">
      <option value="" disabled selected>Condition</option>
      <option value="and">AND</option>
      <option value="or">OR</option>
    </select>

    <button class="ui red button" id="add-button">ADD</button>

</div>
  
